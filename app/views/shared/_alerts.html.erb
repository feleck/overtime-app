<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], image: :warning, title: 'Overtime App Alert', sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], image: :error, title: 'Overtime App Error', sticky: false) %>
<% else %>
  <%= js add_gritter(flash[:notice], image: :notice, title: 'Overtime App Notification', sticky: false) %>
<% end %>
